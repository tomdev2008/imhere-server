<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.xiaoxiancai.imhere.server.inter.UserMapper">
	
	<resultMap type="org.xiaoxiancai.imhere.server.entity.User" id="userResultMap">
		<id property="id" column="ID" javaType="int" jdbcType="INTEGER" />
		<result property="mobile" column="MOBILE" javaType="string" jdbcType="VARCHAR" />
		<result property="nickName" column="NICKNAME" javaType="string" jdbcType="VARCHAR" />
		<result property="email" column="EMAIL" javaType="string" jdbcType="VARCHAR" />
		<result property="signature" column="SIGNATURE" javaType="string" jdbcType="VARCHAR" />
	</resultMap>	

	<select id="getUserByMobile" parameterType="string" resultMap="userResultMap">
        select * from `tb_user` where mobile = #{mobile}
    </select>
    
	<!-- 注册新用户 -->
	<insert id="registerUser" parameterType="User" keyProperty="id" useGeneratedKeys="true">
		<!-- 动态insert语句 -->
		insert into `tb_user`(MOBILE, PASSWORD, NICKNAME
			<if test="email != null">, EMAIL</if>
			<if test="signature != null">, SIGNATURE</if>
		) values (#{mobile}, #{password}, #{nickName}
			<if test="email != null">, #{email}</if>
			<if test="signature != null">, #{signature}</if>
		)
	</insert>
	
	<!-- 查找好友昵称 -->
	<select id="getAllFriends" parameterType="int" resultType="string">
		select friends from `tb_friendship` where USER_ID = #{userId}
	</select>
	
	<!-- 保存添加朋友消息 -->
	<insert id="addFriend" parameterType="AddFriendMessage" keyProperty="id" useGeneratedKeys="true">
		insert into `tb_addfriend_msg`(FROM_USER_ID, FROM_USER_MOBILE, FROM_USER_NICKNAME, TO_USER_MOBILE
			<if test="toUserId != null">, TO_USER_ID</if>
		) values (#{fromUserId}, #{fromUserMobile}, #{fromUserNickname}, #{toUserMobile}
			<if test="toUserId != null">, #{toUserId}</if>
		)
	</insert>
	
	<!-- 计数添加朋友消息 -->
	<select id="countAddFriendMessage" parameterType="AddFriendMessage" resultType="int">
		select count(id) from `tb_addfriend_msg`
			where from_user_mobile = #{fromUserMobile} and to_user_mobile = #{toUserMobile}
	</select>
	
	<resultMap type="org.xiaoxiancai.imhere.server.entity.AddFriendMessage" id="addFriendMessageResultMap">
		<result property="fromUserId" column="FROM_USER_ID" javaType="int" jdbcType="INTEGER" />
		<result property="fromUserMobile" column="FROM_USER_MOBILE" javaType="string" jdbcType="VARCHAR" />
		<result property="fromUserNickname" column="FROM_USER_NICKNAME" javaType="string" jdbcType="VARCHAR" />
		<result property="toUserId" column="TO_USER_ID" javaType="int" jdbcType="INTEGER" />
		<result property="toUserMobile" column="TO_USER_MOBILE" javaType="string" jdbcType="VARCHAR" />
	</resultMap>
	<select id="getAddFriendMessage" parameterType="string" resultMap="addFriendMessageResultMap">
	    select * from `tb_addfriend_msg`
	    	where to_user_mobile = #{toUserMobile}
	</select>
</mapper>